<Window x:Class="Controller2Mouse.BindButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controller2Mouse"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="BindButton" Height="75" Width="150"
        KeyDown="UIElement_OnKeyDown">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Press Button" HorizontalAlignment="Center"/>
            <TextBlock Text="Press ESC to cancel..." HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
